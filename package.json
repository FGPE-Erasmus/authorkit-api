{
  "name": "fgpe-authorkit-api",
  "version": "1.0.0",
  "description": "FGPE AuthorKit API - The API of a toolkit to author gamified activities to support programming learning. This is part of the Erasmus+ Project entitled Framework for Gamified Programming Education (FGPE).",
  "main": "dist/index.js",
  "repository": "git@github.com:josepaiva94/fgpe-authorkit-api.git",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "node -r ts-node/register -r dotenv-safe/config src/index.ts",
    "cli": "node -r ts-node/register -r dotenv-safe/config src/cli.ts",
    "watch:dev": "nodemon",
    "watch:debug": "nodemon --config nodemon-debug.json",
    "prebuild": "rm -rf ./dist",
    "build": "tsc",
    "postbuild": "cp -R ./src/assets ./dist",
    "prod": "node -r dotenv-safe/config dist/index.js",
    "lint:check": "tslint --project ./",
    "lint:fix": "tslint --project ./ --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "ts-typeorm": "ts-node ./node_modules/typeorm/cli.js"
  },
  "author": "Jos√© C. Paiva <josepaiva94@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">= 8"
  },
  "precommit": [
    "lint:check"
  ],
  "dependencies": {
    "@nestjs/common": "^5.7.4",
    "@nestjs/core": "^5.7.4",
    "@nestjs/graphql": "^5.5.7",
    "@nestjs/microservices": "^5.7.4",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/websockets": "^5.7.4",
    "apollo-server-express": "^2.4.8",
    "async": "^2.6.2",
    "async-exit-hook": "^2.0.1",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "cls-hooked": "^4.2.2",
    "cors": "^2.8.5",
    "dotenv-safe": "^5.0.1",
    "email-templates": "^6.0.2",
    "express-rate-limit": "^5.0.0",
    "faker": "^4.1.0",
    "graphql": "^14.1.1",
    "graphql-subscriptions": "^1.0.0",
    "graphql-tag-pluck": "^0.8.4",
    "graphql-tools": "^4.0.3",
    "helmet": "^3.16.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "luxon": "^1.12.0",
    "mongodb": "^3.2.1",
    "nestjs-command": "0.0.4",
    "nodemailer": "^5.1.1",
    "passport": "^0.4.0",
    "passport-facebook-token": "^3.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "pug": "^2.0.4",
    "qs-middleware": "^1.0.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "rxjs-compat": "^6.3.3",
    "tslib": "^1.9.3",
    "typeorm": "^0.2.15",
    "winston": "^2.4.4"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.7.4",
    "@types/async": "^2.4.1",
    "@types/express": "^4.16.0",
    "@types/faker": "^4.1.5",
    "@types/graphql": "^14.0.7",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.123",
    "@types/luxon": "^1.11.1",
    "@types/mongodb": "^3.1.23",
    "@types/node": "^10.14.2",
    "@types/nodemailer": "^4.6.6",
    "@types/redis": "^2.8.11",
    "@types/socket.io": "^2.1.2",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "pre-commit": "^1.2.2",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.14.0",
    "typescript": "^3.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
